<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_next"
            android:id="@+id/button_next" />
    </LinearLayout>

    <LinearLayout
        style="@style/MyStyle"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            style="@style/MyStyle"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pos_1_1"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:rotation="180"
                android:src="@drawable/elem_light_active"
                android:background="@android:color/transparent"/>

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_1_2"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_1_3"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementLine
                android:id="@+id/pos_1_4"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_line" />
        </LinearLayout>

        <LinearLayout
            style="@style/MyStyle"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.admin.mygamel.elements.ElementLine
                android:id="@+id/pos_2_1"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_line" />

            <com.example.admin.mygamel.elements.ElementLine
                android:id="@+id/pos_2_2"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_line" />

            <com.example.admin.mygamel.elements.ElementLine
                android:id="@+id/pos_2_3"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_line" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_2_4"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />
        </LinearLayout>

        <LinearLayout
            style="@style/MyStyle"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_3_1"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_3_2"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_3_3"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_3_4"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />
        </LinearLayout>

        <LinearLayout
            style="@style/MyStyle"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_4_1"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner" />

            <com.example.admin.mygamel.elements.ElementLine
                android:id="@+id/pos_4_2"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_line" />

            <com.example.admin.mygamel.elements.ElementCorner
                android:id="@+id/pos_4_3"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_corner"
                />

            <ImageView
                android:id="@+id/pos_4_4"
                style="@style/MyStyle"
                android:layout_weight="1"
                android:src="@drawable/elem_light_active" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>